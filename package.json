{
  "name": "site-root",
  "private": true,
  "scripts": {
    "dev": "npx concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "npm --prefix site run dev",
    "dev:backend": "npm --prefix backend run dev",
    "build": "npm install && npm run build:frontend && cpx \"backend/functions/**\" \"site/build/functions\" && cpx \"backend/ws/**\" \"site/build/ws\"",
    "build:frontend": "npm --prefix site run build"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "concurrently": "^9.2.1"
  }
}
